<view class="wrap" style="background-color: #d3d3d3; padding-top: 2px;">
    <view class="card-area">
        <canvas class="myCanvas" canvas-id="mycanvas" disable-scroll="false" bindtouchstart="touchstart"
            bindtouchmove="touchmove" bindtouchend="touchend" bindtouchcancel="touchcancel" bindlongtap="longtap"
            binderror="error">
        </canvas>
    </view>
    <view class="card-area">
        <form bindsubmit="saveMood">
            <view class="mood-wrapper" style="display: {{moodSelectorDisplay}}">
                <view class="top-description border-bottom">
                    你此刻的心情
                </view>
                <view class="mood-selector">
                    <radio-group name="mood" bindchange="moodChange">
                        <radio value="happy">
                            <label>快乐</label>
                        </radio>
                        <radio value="sad">
                            <label>难过</label>
                        </radio>
                        <radio value="calm">
                            <label>平静</label>
                        </radio>
                    </radio-group>
                </view>
            </view>
            <view class="textinput-wrapper" style="display: {{textInputDisplay}}">
                <view class="top-description border-bottom">
                    <view>描述你此刻的心情</view>
                </view>
                <textarea name="text" auto-focus="{{true}}" confirm-type="done" maxlength="-1" placeholder="在这里输入" bindconfirm="textConfirm" />
            </view>
            <view class="button-group" style="display: {{buttonGroupDisplay}}">
                <button form-type="reset" bind:tap="resetview">重置</button>
                <button form-type="buttonclick" bind:tap="download">保存</button>
                <button form-type="submit">提交</button>
            </view>
        </form>
    </view>
